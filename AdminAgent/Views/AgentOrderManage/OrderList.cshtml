@model IList<Ydb.ApplicationService.ModelDto.ServiceOrderDto>
@{
    ViewBag.headTitle = "订单管理";
    ViewBag.subTitle = "";
    ViewBag.breadcrumbOl = new List<string>() { "订单管理", "订单列表" };
}

 <!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">订单列表</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form action="">
                        <div class="row">
                            @*<div class="col-md-3">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">位置</label>
                                        <div class="col-md-9">
                                            <select class="form-control">
                                                <option>海南</option>
                                                <option>北京</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>*@
                            <div class="col-md-3">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">订单状态</label>
                                        <div class="col-md-9">
                                            <select class="form-control">
                                                <option>所有</option>
                                                <option>已完成</option>
                                                <option>未完成</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">时间范围</label>
                                        <div class="col-md-8">
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                <input type="text" class="form-control pull-right" id="reservation">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>序号</th>
                                <th>订单号</th>
                                <th>服务名称</th>
                                <th>店铺</th>
                                <th>客户名</th>
                                <th>客户地址</th>
                                <th>下单时间</th>
                                <th>订单状态</th>
                                <th>负责人</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>序号</th>
                                <th>订单号</th>
                                <th>服务名称</th>
                                <th>店铺</th>
                                <th>客户名</th>
                                <th>客户地址</th>
                                <th>下单时间</th>
                                <th>订单状态</th>
                                <th>负责人</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @for (int i = 0; i < @Model.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td><a href="./assistant_detail?id=@Html.DisplayFor(modelItem => Model[i].Id)">@Html.DisplayFor(modelItem => Model[i].SerialNo)</a></td>
                                    <td>@Html.DisplayFor(modelItem => Model[i].Title)</td>
                                    <td>@Html.DisplayFor(modelItem => Model[i].ServiceBusinessName)</td>
                                    <td>@Html.DisplayFor(modelItem => Model[i].TargetCustomerName)</td>
                                    <td>@Html.DisplayFor(modelItem => Model[i].TargetAddress)</td>
                                    <td>@Html.DisplayFor(modelItem => Model[i].OrderConfirmTime)</td>
                                    <td>@Html.DisplayFor(modelItem => Model[i].GetStatusTitleFriendly)</td>
                                    <td>@Html.DisplayFor(modelItem => Model[i].StaffName)</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>
<!-- /.content -->
@Html.Action("footer", "Agent", new { id = "" })


