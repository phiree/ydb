@model  IList<Ydb.BusinessResource.DomainModel.Staff>
@{
    Layout = null;
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>序号</th>
            <th>登录账号</th>
            <th>昵称</th>
            <th>员工姓名</th>
            <th>员工编号</th>
            <th>联系电话</th>
            <th>邮箱</th>
            <th>详情</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < @Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Html.DisplayFor(modelItem => Model[i].LoginName)</td>
                <td>@Html.DisplayFor(modelItem => Model[i].DisplayName)</td>
                <td>@Html.DisplayFor(modelItem => Model[i].Name)</td>
                <td>@Html.DisplayFor(modelItem => Model[i].Code)</td>
                <td>@Html.DisplayFor(modelItem => Model[i].Phone)</td>
                <td>@Html.DisplayFor(modelItem => Model[i].Email)</td>
                <td>@Html.ActionLink("进入", "BusinessStoreStaffDetail", "AgentBusinessManage", new { id = Model[i].Id }, new { })</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>序号</th>
            <th>登录账号</th>
            <th>昵称</th>
            <th>员工姓名</th>
            <th>员工编号</th>
            <th>联系电话</th>
            <th>邮箱</th>
            <th>详情</th>
        </tr>
    </tfoot>
</table>