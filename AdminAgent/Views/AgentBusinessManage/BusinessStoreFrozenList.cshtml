@model IList<Ydb.BusinessResource.DomainModel.Business>
@{
    Layout = null;
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>序号</th>
            <th>商户账号</th>
            <th>店铺名称</th>
            <th>联系电话</th>
            <th>创建时间</th>
            <th>停封时间</th>
            <th>详情</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < @Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Html.ActionLink(Html.DisplayFor(modelItem => Model[i].OwnerName).ToString(), "BusinessDetail", "AgentBusinessManage", new { id = Model[i].OwnerId }, new { })</td>
                <td>@Html.DisplayFor(modelItem => Model[i].Name)</td>
                <td>@Html.DisplayFor(modelItem => Model[i].Phone)</td>
                <td>@Html.DisplayFor(modelItem => Model[i].CreatedTime)</td>
                <td>@Html.DisplayFor(modelItem => Model[i].EnabledTime)</td>
                <td>@Html.ActionLink("进入", "BusinessStoreDetail", "AgentBusinessManage", new { id = Model[i].Id }, new { })</td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <th>序号</th>
            <th>商户账号</th>
            <th>店铺名称</th>
            <th>联系电话</th>
            <th>创建时间</th>
            <th>停封时间</th>
            <th>详情</th>
        </tr>
    </tfoot>
</table>

