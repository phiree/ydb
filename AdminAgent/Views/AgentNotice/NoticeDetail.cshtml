@model Ydb.Notice.DomainModel.Notice

@{
    ViewBag.headTitle = "公告列表";
    ViewBag.subTitle = "公告详情";
    ViewBag.breadcrumbOl = new List<string> { "公告列表", "公告详情" };
}
<section class="content">
    <!-- /.row -->
    <div class="row">
        <!-- /.col -->
        <div class="col-xs-6 col-xs-offset-3">
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <div class="col-xs-12">
                        <div class="box-header with-border text-center">
                            <h3 class="box-title text-center" style="margin-top: 8px">公告详情</h3>
                        </div>
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>公告标题</b> <p class="pull-right">@Model.Title</p>
                            </li>
                            <li class="list-group-item">
                                <div class="control-group">
                                    <dl class="dl-horizontal">
                                        <dt class="notice-text-left">正文内容</dt>
                                        <dd>
                                            @Model.Body
                                        </dd>
                                    </dl>
                                </div>
                            </li>
                            <li class="list-group-item" style="height: 400px;">
                                <b>上传图片</b>
                                <a class="pull-right">
                                    <div class="col-sm-12">
                                        <div class="row">
                                            <div class="col-sm-12">
                                             </div>
                                        </div>
                                        <!-- /.row -->
                                    </div>
                                </a>
                            </li>
                            <li class="list-group-item">
                                <b>跳转链接</b>  
                            </li>
                            <li class="list-group-item">
                                <b>公告类型</b> <p class="pull-right"></p>
                            </li>
                            <li class="list-group-item">
                                <b>发送目标</b> <p class="pull-right">@Model.TargetUserTypeString</p>
                            </li>
                            <li class="list-group-item">
                                <b>推送日期</b> <p class="pull-right">@Model.ApprovedTime</p>
                            </li>
                        </ul>
                        <div class="col-xs-8 col-xs-offset-2">
                            <div class="col-xs-4 col-xs-offset-4">
                                <a href="javascript:void(0)" class="btn btn-block btn-default">返回</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<script src="../../static/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="../../static/plugins/datatables/dataTables.bootstrap.min.js"></script>
