@model AdminAgent.Models.AddNoticeModel

@{
    ViewBag.headTitle = "公告列表";
    ViewBag.  subTitle =  "新建公告";
    ViewBag.breadcrumbOl = new List<string> {"推送管理", "公告列表"};
}
<section class="content">
    <!-- /.row -->
    <div class="row">
        <!-- /.col -->
        <div class="col-xs-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">新建公告</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
              @using (Html.BeginForm("AddNotice", "AgentNotice",FormMethod.Post,new { @class="form-horizontal"}))
              {

                    <div class="box-body">
                        <div class="form-group">
                            <label for="title" class="col-sm-2 control-label">公告标题</label>
                            @Html.LabelFor(x => x.Title, new { htmlAttribute = new { @class= "col-sm-2 control-label" } } )
                            <div class="col-sm-5">
                                @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "不超过20个字" } })
                                
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="selectType" class="col-sm-2 control-label">公告类型</label>
                            <div class="col-sm-5">
                                <select id="selectType" class="form-control input-sm">
                                    <option value=""></option>
                                    <option value="文本公告">文本公告</option>
                                    <option value="图片公告">图片公告</option>
                                    <option value="升级包公告">升级包公告</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="content" class="col-sm-2 control-label">正文内容</label>
                            <div class="col-sm-5">
                                @Html.TextAreaFor(x => x.Body, new {@rows="10",@class= "form-control",  @placeholder="不超过140个字",@style="width:100%" })
                                </div>
                        </div>
                        <div class="form-group">
                            <label for="link" class="col-sm-2 control-label">跳转链接</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="link" placeholder="输入图片公告或跳转公告的链接地址">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="uploadLink" class="col-sm-2 control-label">升级包地址</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="uploadLink" placeholder="输入安装包链接地址">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">发送目标</label>
                            <div class="col-sm-5 data-usertype">
                                
                                    
                                    <input type="checkbox" name="UserType" id="cbxUserType1" value="1"><label for="cbxUserType1">用户</label>
                                    <input type="checkbox" name="UserType"  id="cbxUserType2" value="2"><label for="cbxUserType2">商户</label>  
                                    <input type="checkbox" name="UserType"  id="cbxUserType3" value="4"><label for="cbxUserType3">助理</label> 
                             
                                
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">发送时间</label>
                            <div class="col-sm-10">
                                <div class="form-horizontal col-xs-3 no-padding">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                <input type="text" class="form-control pull-right" id="reservation">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <div class="col-xs-8">
                            <div class="col-xs-3 col-xs-offset-4">
                              <input type="submit" class="btn btn-block btn-success" value="创建" > 
                            </div>
                            <div class="col-xs-3 col-xs-offset-4" style="margin-top: 20px">
                                <a href="javascript:void(0)" class="btn btn-block btn-danger" data-toggle="modal" data-target="#reject">返回</a>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-footer -->
               

              }
            </div>
            <!-- /. box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
@Html.Action("footer", "Agent", new { id = "" })
<script src="../../static/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="../../static/plugins/datatables/dataTables.bootstrap.min.js"></script>
<!-- date-range-picker -->
<script src="../../static/plugins/daterangepicker/moment.min.js"></script>
<script src="../../static/plugins/daterangepicker/daterangepicker.js"></script>
<script>
    (function(){
        //Date range picker
        $('#reservation').daterangepicker();
        $(".data-usertype input:checkbox").each(function (e) {

           
             
        });
       
        //Date range picker with time picker
    })();
</script>
