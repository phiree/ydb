<UserControl x:Class="Dianzhu.CSClient.ViewWPF.UC_ChatImageNoraml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dianzhu.CSClient.ViewWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <MediaElement x:Name="gif" MediaEnded="gif_MediaEnded" Height="100" MaxWidth="150" LoadedBehavior="Play" MouseMove="gif_MouseMove" MouseDown="gif_MouseDown">
            <MediaElement.ToolTip>
                <Grid>
                    <TextBlock Text="点击查看大图"/>
                </Grid>
            </MediaElement.ToolTip>
        </MediaElement>
    </Grid>
</UserControl>
