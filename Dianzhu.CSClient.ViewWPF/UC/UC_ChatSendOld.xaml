<UserControl x:Class="Dianzhu.CSClient.ViewWPF.UC_ChatSendOld"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dianzhu.CSClient.ViewWPF"
             mc:Ignorable="d" d:DesignWidth="300" Height="52.258">
    <Grid>
        <StackPanel>
            <WrapPanel>
                <TextBox x:Name="tbxTextMessage"   VerticalAlignment="Top" Width="200" KeyDown="tbxTextMessage_KeyDown"/>
                <Button x:Name="btnSendTextMessage" Content="发送"   Width="75" Click="btnSendTextMessage_Click"/>

            </WrapPanel>
            <WrapPanel>
                <Button x:Name="btnSendImage" Content="发送图片" Click="btnSendMedia_Click" />
                <Button x:Name="btnSendAudio" Content="发送音频" Click="btnSendMedia_Click" Visibility="Collapsed"/>
                <Button x:Name="btnCaptureImage" Content="截屏" Click="btnCaptureImage_Click" />
                <Label x:Name="lblSendingMsg" Content="Label"/>

            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
