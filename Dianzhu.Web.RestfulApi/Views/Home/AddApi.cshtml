@model Dianzhu.Web.RestfulApi.Models.ApiInfo

@{
    Layout = null;
}


@using (Html.BeginForm("AddApi", "Home", FormMethod.Post, new { id = "addForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>添加接口</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ApiName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ApiName, new { @style = "width:500px;" })
                @Html.ValidationMessageFor(model => model.ApiName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ApiRoute, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ApiRoute, new { @style = "width:500px;" })
                @Html.ValidationMessageFor(model => model.ApiRoute)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ApiRule, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ApiRule, new { @style = "width:500px;" })
                @Html.ValidationMessageFor(model => model.ApiRule)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="btnSave" type="button" value="Save" class="btn btn-default" onclick="PostAddApi()"/>@*PostAddApi(@Model)*@
                <input id="btnCancel" type="button" value="Cancel" class="btn btn-default" onclick="GetApiInfo()"/>
            </div>
        </div>
    </div>
}